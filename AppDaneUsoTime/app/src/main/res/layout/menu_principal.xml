<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_dane" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="MenÃº Principal"

        android:textColor="@color/colorPrimary"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="144dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:layout_weight="0.47"
            android:drawableLeft="@drawable/perfil"

            android:hint="Mi Perfil"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:theme="@style/BotonColores" />

        <Button
            android:id="@+id/btnActividades"
            android:layout_width="144dp"

            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.47"
            android:theme="@style/BotonColores"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:drawableLeft="@drawable/activity"
            android:hint="Actividades" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnReportes"
            android:layout_width="163dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:layout_weight="0.47"

            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:theme="@style/BotonColores"
            android:drawableStart="@drawable/reportes"
            android:hint="Reportes" />
        <Button
            android:id="@+id/btnIncentivos"
            android:layout_width="172dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"

            android:layout_weight="0.47"
            android:drawableLeft="@drawable/incentive"
            android:hint="Incentivos"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:theme="@style/BotonColores" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="117dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/salir"
            android:hint="Salir"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:theme="@style/BotonColores" />

    </LinearLayout>


</LinearLayout>