<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_dane"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.michael.appdaneusotiempo.Registro"
        tools:showIn="@layout/activity_actividades_cml">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Tiempos de desplazamiento"

                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rdcasa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="De la casa al trabajo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rdtrabajo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Del trabajo a la casa" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rduni"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="De la casa a la universidad, instituto o institución educativa" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rdunitrabajo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="De la universidad, instituto o institución educativa al trabajo" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rdunicasa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="De la universidad, instituto o institución educativa a la casa" />






            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rdcasacentro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="De la casa al centro comercial" />






            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rdtrabajocentro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Del trabajo al centro comercial" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rdotro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Otro desplazamiento" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnVolver"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:typeface="serif"

                    android:drawableLeft="@android:drawable/ic_menu_revert"
                    android:gravity="center"

                    android:text="Volver"
                    android:textColor="@android:color/background_light"
                    android:theme="@style/BotonColores" />

                <Button
                    android:id="@+id/btnSiguiente"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:typeface="serif"

                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/siguiente"
                    android:gravity="center"

                    android:text="Siguiente"
                    android:textColor="@android:color/background_light"
                    android:theme="@style/BotonColores" />



            </LinearLayout>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>




</LinearLayout>